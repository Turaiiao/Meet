
// https://leetcode-cn.com/problems/palindrome-number/

fun isPalindrome (x: int) -> boolean {
    if x < 0 -> 
        return false
        
    var str: string = '\(x)', reverse: string = ''
    
    var count = str.count()
    
    for i : 0..(count) ->
        reverse.append(str.at(count - i - 1))
    
    return str == reverse
}

println isPalindrome (121) // true
